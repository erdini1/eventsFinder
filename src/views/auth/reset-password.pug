extends ../layout/index

block content
	div(class="py-2")
		h1(class="text-4xl my-2 text-center font-extrabold") Event
			span(class="font-normal") Finder
		h2(class="text-center font-extrabold text-2xl")= titlePage

		div(class="mt-8 mx-auto max-w-md")
			div(class="bg-white pb-8 pt-3 px-4 shadow")
				form(class="space-y-5" method="POST" novalidate)

					input(type="hidden" name="_csrf" value=csrfToken)

					if errors
						div(class="max-w-md mx-auto")
							each error in errors 
								p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Ingresa tu nueva contrase単a
						input#password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Password" type="password" name="password")
					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repeatPassword") Repite la contrase単a
						input#repeatPassword(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repite tu contrase単a" type="password" name="repeatPassword")

					input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer transition-colors" type="submit" value="Recuperar contrase単a")
