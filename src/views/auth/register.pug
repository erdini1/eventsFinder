extends ../layout/index

block content
	div(class="py-2")
		h1(class="text-4xl my-2 text-center font-extrabold") Event
			span(class="font-normal") Finder
		h2(class="text-center font-extrabold text-3xl")= titlePage

		div(class="mt-8 mx-auto max-w-md")
			div(class="bg-white py-8 px-4 shadow")
				form(class="space-y-5" method="POST" action="/auth/register" novalidate)

					if errors
						div(class="max-w-md mx-auto")
							each error in errors 
								p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="firstName") Nombre
						input#firstName(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Nombre" type="text" name="firstName" value= firstName)
					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="lastName") Apellido
						input#lastName(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Apellido" type="text" name="lastName" value= lastName)
					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email
						input#email(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Email" type="text" name="email" value= email)
					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Contraseña
						input#password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Password" type="password" name="password")
					div 
						label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repeatPassword") Repetir contraseña
						input#repeatPassword(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repite tu contraseña" type="password" name="repeatPassword")

					div(class="flex items-center justify-between")
						a(class="text-gray-500 text-xs hover:text-gray-700 transition-colors" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
						a(class="text-gray-500 text-xs hover:text-gray-700 transition-colors" href="/auth/forgot-password") Olvide mi contraseña

					input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer transition-colors" type="submit" value="Crear Cuenta")

					if registered
						div(class="max-w-md mx-auto")
							p(class="bg-green-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= registered